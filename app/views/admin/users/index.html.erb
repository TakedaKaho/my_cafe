<div class="container">
<h2 class="text-center bg-dark text-white p-3" style="font-family: 'Arial', sans-serif;">U s e r 一 覧</h2>

 <div class="row justify-content-center mt-4">
  
  <table class="table mt-4">
        <thead class="text-center">
          <tr>
            <th>会員ID</th>
            <th>profile画像</th>
            <th>名前</th>
            <th>自己紹介文</th>
            <th>ステータス</th>
            <th></th>
          </tr>
        </thead>
        
        <tbody class="text-center">
         <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
             <% if user.profile_image.attached? %>
              <%= image_tag url_for(user.profile_image), class: "rounded-circle", style: "width: 60px; height: 60px; object-fit: cover; margin-left: 1rem;" %>
             <% else %>
              <%= image_tag "no_image.jpg", class: "rounded-circle", style: "width: 60px; height: 60px; object-fit: cover; margin-left: 1rem;"%>
             <% end %>
            </td>
            <td><%= user.name %></td>

            <td><%= user.body %></td>
            <td>
             <% if user.is_deleted == true %>
              <strong class="text-secondary">退会済</strong>
             <% else %>
              <strong class="text-info">有効</strong>
             <% end %>
             </td>
            <td> 
              <%= link_to admin_user_path(user), class: "btn btn-sm btn-outline-secondary" do %>
               詳細へ
              <% end %>
            </td>
          </tr>
         <% end %>
        </tbody>
        
      </table>
      
      <div class="pagination justify-content-center">
        <%= paginate @users, theme: 'twitter-bootstrap-4' %>
      </div>
  
 </div>
</div>