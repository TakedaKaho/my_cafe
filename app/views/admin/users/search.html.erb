<div class="container">
  <h2 class="text-center bg-dark text-white p-3" style="font-family: 'Arial', sans-serif;">検 索 結 果</h2>
  
  <div class="col-md-12 mt-4 mb-4 text-right">
    <%= form_with url: search_admin_users_path, local: true, method: :get do |f| %>
     <%= f.text_field :word, placeholder: "ユーザー名（不適切）" %>
     <%= f.submit "検索", class: "btn-sm btn-dark" %>
    <% end %>
  </div>

  <div class="row mt-4">
    <% if params[:word].present? %>
     <table class="table">
        <thead class="text-center">
          <tr>
            <th>会員ID</th>
            <th>profile画像</th>
            <th>名前</th>
            <th>自己紹介文</th>
            <th>ステータス</th>
            <th></th>
          </tr>
        </thead>
        
        <tbody class="text-center">
         <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
             <% if user.profile_image.attached? %>
              <%= image_tag url_for(user.profile_image), class: "rounded-circle", style: "width: 60px; height: 60px; object-fit: cover; margin-left: 1rem;" %>
             <% else %>
              <%= image_tag "no_image.jpg", class: "rounded-circle", style: "width: 60px; height: 60px; object-fit: cover; margin-left: 1rem;"%>
             <% end %>
            </td>
            <td><%= user.name %></td>

            <td><%= user.body %></td>
            <td>
             <% if user.is_deleted == true %>
              <strong class="text-secondary">退会済</strong>
             <% else %>
              <strong class="text-info">有効</strong>
             <% end %>
             </td>
            <td> 
              <%= link_to admin_user_path(user), class: "btn btn-sm btn-outline-secondary" do %>
               詳細へ
              <% end %>
            </td>
          </tr>
         <% end %>
        </tbody>
        
      </table>
    <% end %>
  </div>
  
  <div class="row d-flex justify-content-center mt-3 mb-3">
    <%= link_to  admin_users_path, class: "btn  btn-outline-dark mr-1" do %>
      <i class="fa-solid fa-rotate-left"></i> user一覧へ戻る
    <% end %>
  </div>
  
</div>