<div class="container">
    
 <% if flash[:user_notice].present? %>
  <div class="alert alert-success">
    <%= flash[:user_notice] %>
  </div>
 <% end %>
 
 <h3 class="mt-4 mb-4">会員詳細ページ</h3>
 
 <div class="row justify-content-center mb-4">
  
    <div class="col-md-4">
     <h5 class="mb-1"><strong><i class="fa-solid fa-camera-retro"></i> Profile image</strong></h5>
      <% if @user.profile_image.attached? %>
        <%= image_tag url_for(@user.profile_image),style: "width: 250px; height: 250px; object-fit: cover;" %>
      <% else %>
        <%= image_tag "no_image.jpg", style: "width: 250px; height: 250px; object-fit: cover;"%>
      <% end %>
    </div>
    
    <div class="col-md-6">
     <h5 class="mt-1"><strong><i class="fa-solid fa-user"></i> Profile information</strong></h5>
    
      <div class="card mt-2">
        <div class="card-body">
          
          <div class="mb-3">
            <strong>名前:</strong> <%= @user.name %>
          </div>

          <div class="mb-3">
            <strong>Email:</strong> <%= @user.email %>
          </div>

          <div class="mb-3">
            <strong>自己紹介文:</strong> <%= @user.body %>
          </div>

          <div class="mb-3">
            <strong>ステータス:</strong>
            <% if @user.is_deleted %>
              <span class="text-secondary">退会済</span>
            <% else %>
              <span class="text-info">有効</span>
            <% end %>
          </div>

          <%= link_to edit_admin_user_path(@user), class: "btn btn-outline-secondary btn-sm" do %>
            <%= @user.name %>さんの情報を編集する <i class="fa-solid fa-pen-to-square"></i>
          <% end %>
          
        </div>
      </div>
       <div class="row justify-content-center">
         <%= link_to admin_users_path, class: "btn btn-sm btn-outline-dark mt-2" do %>
           User一覧に戻る <i class="fa-solid fa-rotate-left"></i>
         <% end %>
       </div>
    </div>
  </div>
</div>