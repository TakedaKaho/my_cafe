<!-- app/views/admin/comments/index.html.erb -->

<h1>コメント一覧</h1>
<table class="table">
  <thead>
    <tr>
      <th>投稿ID</th>
      <th>ユーザー名</th>
      <th>コメント内容</th>
      <th>作成日時</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.post_id %></td>
        <td><%= comment.user.name if comment.user %></td>
        <td><%= comment.comment %></td>
        <td><%= comment.created_at.strftime("%Y-%m-%d") %></td>
        <td>
          <%= link_to "削除", admin_comment_path(comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "text-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
