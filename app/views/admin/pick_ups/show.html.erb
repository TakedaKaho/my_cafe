  <div class="container">
  <% if flash[:notice].present? %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <h2 class="mt-4 mb-4"><i class="fa-solid fa-bullhorn"></i> PickUp記事詳細</h2>
      <div class="card bg-info">
        <div class="card-body">
          
          <div class="row justify-content-center">
            <h2 class="card-title text-white", style="font-family: 'Helvetica', sans-serif;">『 <%= @pick_up.title %> 』</h2>
            
            <% if @pick_up.pick_up_images.attached? %>
                <div class="mt-4">
                  <% @pick_up.pick_up_images.each do |image| %>
                    <%= image_tag url_for(image), class: "mb-3", style: "width: 360px; height: 280px; object-fit: cover;" %>
                  <% end %>
                </div>
              <% end %>
            </div>
            
            <div class="col-md-12">
              <h3 class="card-text bg-white text-center mb-2" style="font-family: 'Times New Roman', sans-serif; padding: 5px; width:400px;">
               今週のPickUp Cafe『 <%= @pick_up.post.name %> 』</h3>
              <h5 class="card-text bg-white text-center mt-2" style="padding: 10px;">
                <%= @pick_up.body.gsub(/\n/, '<br>').html_safe %></h5>

              
              <p class="mt-3 d-flex justify-content-end">
                <%= link_to admin_post_path(@pick_up.post), class: "btn btn-dark" do %>
                  <%= @pick_up.post.name %>の詳細を見る <i class="fa-solid fa-mug-hot" style="color: #ffffff;"></i>
                <% end %>
              </p>
            </div>
            
          </div>
        </div>
        
        <div class="d-flex justify-content-center mt-3">
          <%= link_to  admin_pick_ups_path, class: "btn  btn-outline-dark mr-1" do %>
            <i class="fa-solid fa-rotate-left"></i> 記事一覧へ
          <% end %>
          <%= link_to edit_admin_pick_up_path(@pick_up), class: "btn  btn-outline-dark mr-1 ml-1" do %>
            編集 <i class="fa-regular fa-pen-to-square"></i>
          <% end %>
          <%= link_to admin_pick_up_path(@pick_up), method: :delete, data: { confirm: "本当に削除してもよろしいですか？" }, class: "btn btn-outline-danger ml-1" do %>
            消去 <i class="fa-solid fa-trash-can"></i>
          <% end %>
      </div>
     
    </div>
  </div>
</div>
