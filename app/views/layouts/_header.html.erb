      <%= link_to root_path do %>
        <%= image_tag '3.png', size: '200x133' %>
      <% end %>
    </div>
    
    <div class ="col-2"></div>
    <div class="col-2 mt-4 mr-0 mb-4 ml-0 d-flex justify-content-center align-items-center">
