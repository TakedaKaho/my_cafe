   <div class="col-2 d-flex justify-content-center align-items-center">
      <%= link_to "管理者ログイン", new_admin_session_path, class: "btn btn btn-outline-dark rounded-pill mt-auto mr-2 mb-auto ml-2" %>
    </div>
    <div class="row mt-3"></div>
    </div>
    
    
  <% end %>