<div class="container">
  <div class="row">
    <h1 class="col-7 mb-4 text-right">cafe一覧</h1>
    
    <div class="col-2 mb-4 text-right">
     <div class="dropdown">
        <button class="btn btn-outline-dark dropdown-toggle" type="button" id="sortDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          並び替え
        </button>
        <div class="dropdown-menu" aria-labelledby="sortDropdown">
          <%= link_to '新しい順', posts_path(latest: true) , class: 'dropdown-item' %>
          <%= link_to '古い順', posts_path(old: true), class: 'dropdown-item' %>
          <%= link_to '評価の高い順', posts_path(star_count: true), class: 'dropdown-item' %>
        </div>
      </div>
    </div>
    
    <!--<div class="col-3 mb-4">
      <= form_with url: tag_search_posts_path, local: true, method: :get do |f| %>
       <= f.text_field :tag, placeholder: "タグ検索" %>
       %= f.submit "検索", class: "btn-sm btn-info" %>
      < end %>
    </div>-->


    <div class="col-3 mb-4">
      <%= form_with url: search_posts_path, local: true, method: :get do |f| %>
       <%= f.text_field :word, placeholder: "キーワード検索" %>
       <%= f.submit "検索", class: "btn-sm btn-dark" %>
      <% end %>
    </div>
  </div>


  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-3 mb-4">
        <%= link_to post_path(post.id), class: "text-decoration-none text-dark" do %>
          <div class="card h-100">
            <div class="card-body text-center">
              <%= image_tag url_for(post.post_images.first), class: "img-thumbnail", style: "width: 160px; height: 140px; object-fit: cover;" %>
              <h6 class="card-title mt-2">~Name~</h6><h5> <%= post.name %></h5>
              <h6 class="card-title"><i class="fa-solid fa-star" style="color: #FFD43B;"></i>平均評価: <%= '%.1f' % post.average_star %>点</h6>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  
   <div class="pagination justify-content-center">
    <%= paginate @posts %>
   </div>
   
</div>

