<div class="container">
  <h2 class="text-center bg-dark text-white p-3" style="font-family: 'Arial', sans-serif;">C a f e 一 覧 </h2>
  <div class="row mt-4">
    <h1 class="col-6 mb-4"></h1>
    
    <div class="col-6 mb-4 text-right">
      <div class="d-flex align-items-center justify-content-end">
       <div class="dropdown">
        <button class="btn btn-sm btn-outline-dark dropdown-toggle mr-2" type="button" id="sortDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          並び替え
        </button>
        <div class="dropdown-menu mr-1" aria-labelledby="sortDropdown">
          <%= link_to '新しい順', posts_path(latest: true) , class: 'dropdown-item' %>
          <%= link_to '古い順', posts_path(old: true), class: 'dropdown-item' %>
          <%= link_to '評価の高い順', posts_path(star_count: true), class: 'dropdown-item' %>
        </div>
       </div>
        <%= form_with url: search_posts_path, local: true, method: :get do |f| %>
         <%= f.select :search, options_for_select([['CAFE', 'posts'], ['USER', 'users']]) %>
         <%= f.text_field :word, placeholder: "キーワード検索" %>
         <%= f.submit "検索", class: "btn-sm btn-dark" %>
        <% end %>
      </div>
    </div>
    
  </div>


  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-3 mb-2">
        <%= link_to post_path(post.id), class: "text-decoration-none text-dark" do %>
          <div class="card d-flex flex-column">
            <div class="card-body text-center">
              <%= image_tag url_for(post.post_images.first), class: "img-thumbnail", style: "width: 190px; height: 140px; object-fit: cover;" %>
              <h5 class="card-title mt-3">〜 <%= post.name %> 〜</h5>
              
              <div class="d-flex justify-content-center">
                <div class="mr-2">平均評価: <i class="fa-solid fa-star" style="color: #FFD43B;"></i><%= '%.1f' % post.average_star %></div>
                <div class="ml-2"><i class="fa-solid fa-comments fa-sm" style="color: #454545;"></i>: <%= post.comments.count %>件</div>
              </div>
              
              <div class="d-flex justify-content-center">
              <% if current_user && !current_user.guest_user? %>
                <div id="like_buttons_<%= post.id %>">
                  <%= render 'public/likes/like', post: post %>
                </div>
              <% end %>
              </div>
              
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  
  <div class="pagination justify-content-center mt-3">
   <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
  </div>
   
</div>

