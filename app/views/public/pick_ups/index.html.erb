<div class="container">
  
  
  <h2 class="text-center">〜 今週のPickUp Cafe 〜</h2>
  
    <% if @latest_pick_up.present? %>
     <div class="row mb-4 mt-4">
    <div class="col-md-12">
      <div class="card" style="background-color: #F0F8FF;">
        <div class="card-body">
          
          <div class="row justify-content-center">
            <h3 class="card-title", style="font-family: 'Helvetica', sans-serif;">『 <%= @latest_pick_up.title %> 』</h3>
            
            <% if @latest_pick_up.pick_up_images.attached? %>
                <div class="mt-2">
                  <% @latest_pick_up.pick_up_images.each do |image| %>
                    <%= image_tag url_for(image), class: "mb-3", style: "width: 360px; height: 280px; object-fit: cover;" %>
                  <% end %>
                </div>
            <% end %>
            </div>
            <div class="row justify-content-center">
            <div class="col-md-8">
              <h3 class="card-text mb-2" style="font-family: 'Times New Roman', sans-serif; padding: 5px; width:400px;">
               今週のPickUp Cafe『 <%= @latest_pick_up.post.name %> 』</h3>
              <h5 class="card-text bg-white text-center mt-2" style="padding: 15px;">
                <%= @latest_pick_up.body.gsub(/\n/, '<br>').html_safe %></h5>

              
              <p class="mt-3 d-flex justify-content-end">
                <%= link_to post_path(@latest_pick_up.post), class: "btn btn-dark" do %>
                  <%= @latest_pick_up.post.name %>の詳細を見る <i class="fa-solid fa-mug-hot" style="color: #ffffff;"></i>
                <% end %>
              </p>
            </div>
            </div>
          </div>
        </div>
        
    </div>
  </div>
    <% end %>
    
  
  <h3 class="text-center">過去のPickUp一覧</h3>
  
  <table class="table text-center mt-4 mb-4">
    <thead>
      <tr>
        <th>投稿日</th>
        <th>記事名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @pick_ups.each do |pick_up| %>
        <tr>
          <td><%= pick_up.created_at.strftime("%Y-%m-%d") %></td>
          <td><%= pick_up.title %></td>
          <td>
            <%= link_to pick_up_path(pick_up.id), class: "btn btn-sm btn-outline-secondary" do %>
              記事詳細へ
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  </div>
  
<div class="pagination justify-content-center mt-3">
  <%= paginate @pick_ups, theme: 'twitter-bootstrap-4' %>
</div>
