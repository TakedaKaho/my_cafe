<% if post.liked_by?(current_user) %>
    <p>
      <%= link_to post_likes_path(post), method: :delete, remote: true, class: "text-dark" do %>
        いいね<i class="fa-solid fa-heart" style="color: #ff3838;"></i> <%= post.likes.count %>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_likes_path(post), method: :post, remote: true, class: "text-dark" do %>
        いいね<i class="fa-regular fa-heart" style="color: #151414;"></i> <%= post.likes.count %> 
      <% end %>
    </p>
  <% end %>

