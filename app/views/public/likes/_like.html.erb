<% if post.liked_by?(current_user) %>
    <p>
      <%= link_to post_likes_path(post), method: :delete, remote: true do %>
        <i class="fa-solid fa-heart fa-xl" style="color: #fe0101;"></i> <i class="fa-regular fa-thumbs-up fa-lg" style="color: #45474a;"></i> <%= post.likes.count %>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_likes_path(post), method: :post, remote: true do %>
        <i class="fa-regular fa-heart fa-xl" style="color: #151414;"></i> <i class="fa-regular fa-thumbs-up fa-lg" style="color: #45474a;"></i> <%= post.likes.count %> 
      <% end %>
    </p>
  <% end %>

