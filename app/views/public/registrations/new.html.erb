<div class="ml-4">
   <%= flash[:out_notice] %>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card my-5">
        <div class="card-body">
          <h2 class="card-title text-center"><i class="fa-solid fa-seedling"></i> Sign up <i class="fa-solid fa-seedling"></i></h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>


              <%= f.label :name, class: "control-label" %>
              <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
              <%= f.text_field :name, class: "form-control" %>
            </div>


            <div class="form-group">
              <%= f.label :email, class: "control-label" %>
              <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-regular fa-envelope"></i></span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "control-label" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-lock"></i></span>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: "control-label" %>
              <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-lock"></i></span>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group text-center mt-3">
              <%= f.submit "Sign up", class: "btn btn-outline-dark" %>
            </div>
          <% end %>
          登録がすでにお済みの方 <i class="fa-solid fa-hand-point-right"></i>
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
