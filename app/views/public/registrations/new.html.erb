<div class="container">
  
  <% if flash[:out_notice].present? %>
   <div class="alert alert-danger">
     <%= flash[:out_notice] %>
   </div>
  <% end %>
  
  
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card my-5">
        <div class="card-body">
          <h2 class="card-title text-center"><i class="fa-solid fa-seedling"></i> Sign up <i class="fa-solid fa-seedling"></i></h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>



              <div class="input-group-prepend mt-4">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
              <%= f.text_field :name, placeholder: "ユーザー名", class: "form-control" %>
            </div>


            <div class="form-group">
              <div class="input-group-prepend mt-4">
              <span class="input-group-text" aria-hidden="true"><i class="fa-regular fa-envelope"></i></span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "email", class: "form-control" %>
            </div>

            <div class="form-group mt-4">
              <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-lock"></i></span>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "password (６文字以上)", class: "form-control" %>
            </div>

            <div class="form-group mt-4">
              <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-lock"></i></span>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "password確認用", class: "form-control" %>
            </div>

            <div class="form-group text-center mt-3">
              <%= f.submit "Sign up", class: "btn btn-outline-dark" %>
            </div>
          <% end %>
          登録がすでにお済みの方 <i class="fa-solid fa-hand-point-right"></i>
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
