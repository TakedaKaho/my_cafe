<div class="ml-4">
   <%= flash[:login_notice] %>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card my-5">
        <div class="card-body">
          <h2 class="card-title text-center">Log in <i class="fa-solid fa-mug-saucer"></i></h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
          
            <div class="form-group mt-4">
              <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-regular fa-envelope"></i></span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "email", class: "form-control" %>
            </div>

            <div class="form-group mt-4">
              <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-lock"></i></span>
              <%= f.password_field :password, autocomplete: "current-password",placeholder: "password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group form-check mt-2">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>

            <div class="form-group text-center">
              <%= f.submit "Log in", class: "btn btn-outline-dark" %>
            </div>
          <% end %>
          
          登録がまだお済みでない方 <i class="fa-solid fa-hand-point-right"></i>
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

